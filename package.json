{
  "name": "comment-fast",
  "displayName": "Comment Fast",
  "version": "1.0.0",
  "description": "AI-powered comment generator and backlinks checker. Generate contextual comments for blogs and analyze backlinks with Domain Rating.",
  "author": "brice94",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "permissions": [
      "storage",
      "tabs",
      "scripting"
    ],
    "host_permissions": [
      "<all_urls>",
      "https://api.openrouter.ai/*",
      "https://api.capsolver.com/*",
      "https://ahrefs.com/*"
    ]
  }
}

